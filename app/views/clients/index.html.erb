  <div class="container">
      <h1>Hello Clients</h1>
      <% @clients.each do |client| %>
          <%= link_to client_path(client), class: "d-flex align-items-center card-horizontal-client" do %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
              <div class="card-client-horizontal-text d-flex flex-column justify-content-center">
                  <h4 class="card-fullname"> <%= client.full_name %></h4>
                  <p class="card-location"> <%= client.billing_city %></p>
              </div>
              <div class="phone-card-horizontal">
                <i class="fa-solid fa-phone"></i>
              </div>
              <div class="message-card-horizontal">
                <i class="fa-solid fa-envelope"></i>
              </div>
              <% end %>
          <% end %>
      <% if @clients.empty? %>
        <h3>Aucun client enregistr√©.</h3>
      <% end %>

    </div>

</div>
