<div class="container wrapper">
  <div class="mx-3">

    <div class="d-flex justify-content-between align-items-center">
      <%= link_to profile_path, class: "text-decoration-none" do %>
        <div class="back-btn mt-2 mb-5">
          <i class="fa-solid fa-arrow-left"></i>
        </div>
      <% end %>
      <p class="mt-2 mb-5 title-onboarding m-auto">Informations personnelles</p>
    </div>

    <div class="form-onboarding">
      <%= simple_form_for(@user, url: update_info_users_path, method: :patch) do |f| %>
          <p class="onboarding-form-description">Informations sur toi et ton activité 🕺</p>
          <div class="row">
            <div class="col-6">
              <p class="disclaimer">Prénom</p>
              <%= f.input :first_name, required: true,
                            autofocus: true,
                            label: false,
                            input_html: { placeholder: "Prénom" }%>
            </div>
            <div class="col-6">
              <p class="disclaimer">Nom</p>
              <%= f.input :last_name, required: true,
                            autofocus: true,
                            label: false,
                            input_html: { placeholder: "Nom" }%>
            </div>
          </div>
          <p class="disclaimer">Numéro de téléphone</p>
          <%= f.input :phone_number, required: true,
            autofocus: true,
            label: false,
            input_html: { placeholder: "Numéro de téléphone portable (06 ou 07)" } %>
          <p class="disclaimer">Profession</p>
          <%= f.input :title, required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Profession" }%>
          <p class="disclaimer">Adresse</p>
          <%= f.input :address,
            required: true,
            label: false,
            input_html: { name: "user[address]", data: { address_autocomplete_target: "address" }, class: "" },
            wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } } %>
            <div class="disclaimer text-center">
              <p><em>Attention ! Utilise bien le champs de recherche d'adresse ci-dessus 👆🔍</p>
            </div>
          <p class="disclaimer">Description</p>
          <%= f.input :description, required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Description" },
                        class: "mb-3"%>
          <%= f.button :submit, "Mettre à jour", class: "btn-basic-bleu-large-onboard mt-4", value: "Mettre à jour" %>

        <% end %>
      </div>

  </div>
</div>
