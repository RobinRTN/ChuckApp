<div class="container wrapper">
  <div class="row">
    <div class="col-6">
      <h4 class="my-4">Se connecter</h4>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", placeholder: "adresse email" } %>
          <%= f.input :password,
                      required: false,
                      label: false,
                      input_html: { autocomplete: "current-password", placeholder: "mot de passe" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn-basic-bleu", value: "Se connecter" %>
        </div>
      <% end %>

      <%# <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
