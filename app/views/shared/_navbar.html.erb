<% if user_signed_in? %>


    <div class="left-navbar d-flex flex-column justify-content-between align-items-center">
      <div class="logo">
        <%= link_to root_path, class: "home-logo" do %>
          <%= image_tag "SPORTEWS.png" %>
        <% end %>
      </div>
      <a href="/"><i class="fa-solid fa-house"></i></a>
      <a href="/clients"><i class="fa-solid fa-address-book"></i></a>
