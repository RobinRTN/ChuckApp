<div class="container">
  <div class="mx-3 d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Mes réservations</h2>
    <%= link_to new_booking_path, class: "text-decoration-none" do %>
      <div class="ajouter-client-btn d-flex align-items-center">
        <p>Ajouter</p>
        <i class="fa-solid fa-plus"></i>
      </div>
    <% end %>
  </div>
  <div class="reservation-block mx-3 mt-3">
    <ul class="nav nav-pills mb-3 d-flex justify-content-center align-items-center" id="pills-tab" role="tablist">
      <li class="nav-item me-1" role="presentation">
        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Futures</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Passées</button>
      </li>
    </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <% @upcoming_bookings.each do |booking| %>
        <%= link_to booking_path(booking), class: "text-decoration-none" do %>
          <div class="card-horizontal-booking">

              <div class="d-flex align-items-center">
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
                <div class="card-infos d-flex align-items-start flex-column">
                    <p> <h4><%= Client.find(booking.client_id).full_name %></h4></p>
                    <p><strong><%= l(booking.start_time, format: '%-d %B %Y') %></strong> </p>
                    <p><strong><%= l(booking.start_time, format: '%H') %></strong>:<strong><%= l(booking.start_time, format: '%M') %></strong> à <strong><%= l(booking.end_time, format: '%H') %></strong>:<strong><%= l(booking.end_time, format: '%M') %></strong> </p>
                </div>
                <p class="price-tag"><%= booking.price.to_i %>€</p>
              </div>
          </div>
        <% end %>
      <% end %>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
  </div>
  </div>
</div>
